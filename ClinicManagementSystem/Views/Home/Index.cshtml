@{
    ViewBag.Title = "Home Page";

}



<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <!-- Masthead Avatar Image-->
        <img class="masthead-avatar" src="~/Content/Images/hospital.png" alt="hospital" />
        <!-- Masthead Heading-->
        <h1 class="masthead-heading text-uppercase mb-0">Clinic Management Software</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-subheading font-weight-light mb-0">Create Online Appointments</p>
    </div>
</header>



<!-- Portfolio Section-->
<section class="page-section portfolio" id="portfolio">
