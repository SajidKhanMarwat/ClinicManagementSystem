

@{
    Layout = null;
}

<!DOCTYPE html>
<html :class="{ 'theme-dark': dark }" x-data="data()" lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Patient Dashboard</title>

    <link rel="stylesheet" href="~/Content/css/tailwind.output.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Content/js/init-alpine.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>

    <!--Used for bootstrap popups-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body>
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900"
         :class="{ 'overflow-hidden': isSideMenuOpen }">
        <!-- Desktop sidebar -->
        <aside class="z-20 hidden w-64 overflow-y-auto dark:bg-gray-800 md:block flex-shrink-0" style="background-color: #E7E9EB">
            <div class="py-4 text-gray-500 dark:text-gray-400">
                <ul class="mt-6">
                    <li class="relative px-6 py-3">
                        <span class="absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg"
                              aria-hidden="true"></span>
                        <a class="inline-flex items-center w-full text-sm font-semibold text-gray-800 transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200 dark:text-gray-100"
                           href="~/Patient/Index">
                            <svg class="w-5 h-5"
                                 aria-hidden="true"
                                 fill="none"
                                 stroke-linecap="round"
                                 stroke-linejoin="round"
                                 stroke-width="2"
                                 viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            <span class="ml-4">Dashboard</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <div class="flex flex-col flex-1 w-full">
            <header class="z-10 py-4 bg-white shadow-md dark:bg-gray-800">
                <div class="container flex items-center justify-between h-full px-6 mx-auto text-black-600 dark:text-purple-300">
                    <h5><strong>@ViewBag.User.FirstName @ViewBag.User.LastName</strong></h5>
                    <ul class="flex flex-1">
                        <!-- Profile menu -->
                        <li class="relative">
                            &nbsp;
                            <button class="btn btn-outline-primary"
                                    @@click="toggleProfileMenu"
                                    @@keydown.escape="closeProfileMenu"
                                    aria-label="Account"
                                    aria-haspopup="true">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-menu-down" viewBox="0 0 16 16">
                                    <path d="M7.646.146a.5.5 0 0 1 .708 0L10.207 2H14a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h3.793L7.646.146zM1 7v3h14V7H1zm14-1V4a1 1 0 0 0-1-1h-3.793a1 1 0 0 1-.707-.293L8 1.207l-1.5 1.5A1 1 0 0 1 5.793 3H2a1 1 0 0 0-1 1v2h14zm0 5H1v2a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2zM2 4.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5zm0 4a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0 4a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                                </svg>
                            </button>
                            <template x-if="isProfileMenuOpen">
                                <ul x-transition:leave="transition ease-in duration-150"
                                    x-transition:leave-start="opacity-100"
                                    x-transition:leave-end="opacity-0"
                                    @@click.away="closeProfileMenu"
                                    @@keydown.escape="closeProfileMenu"
                                    class="absolute right-0 w-56 p-2 mt-2 space-y-2 text-gray-600 bg-white border border-gray-100 rounded-md shadow-md dark:border-gray-700 dark:text-gray-300 dark:bg-gray-700"
                                    aria-label="submenu">

                                    @Html.Partial("_portalLogOUT")

                                </ul>
                            </template>
                        </li>
                    </ul>
                </div>
            </header>
            <main class="h-full overflow-y-auto">
                <div class="container px-6 mx-auto grid">
                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                        Dashboard
                    </h2>

                    <!-- Cards -->
                    <div class="grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4">
                        <!-- Card -->
                        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                            <div class="card-header"><h3>Create</h3></div>
                            <div class="card-body">
                                <h4 class="card-title">New Appointment</h4>
                                <hr />

                                <button class="btn btn-light btn-lg" type="button" data-bs-toggle="modal" data-bs-target="#createAppointment" data-bs-whatever="@@mdo">Create</button>
                                <div class="modal fade" id="createAppointment" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">

                                                @* Appointment Creation Form *@
                                                <form id="CreateAppointment" method='POST'>
                                                    <div class="mb-3">
                                                        <input name="Title" type="text" class="form-control" placeholder="Appointment Title" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <textarea name="Description" class="form-control" placeholder="Description"></textarea>
                                                    </div>
                                                    <div class="mb-3">
                                                        <textarea name="PatientHistory" class="form-control" placeholder="Patient History"></textarea>
                                                    </div>
                                                    <div class="mb-3 custom-select" style="width:200px;">
                                                        <input name="DoctorID" id="docID" style="display:none" />
                                                        <select name="DoctorSelect" class="text-black" id="AvailableDoctors">
                                                            <option value="">Select Doctor</option>
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <input name="FeesPaid" type="number" class="form-control" placeholder="Fees" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="date" class="col-1 col-form-label text-black">Date</label>
                                                        <input name="Appointment_DateTime" id="startDate" class="form-control" type="date" />
                                                        <label for="date" class="col-2 col-form-label text-black">Time</label>
                                                        <input id="startDate" class="form-control" type="time" />
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button onclick="CreateAppointment()" type="submit" class="btn btn-primary">Create</button>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                            <div class="card-header"><h3>View Prescriptions</h3></div>
                            <div class="card-body">
                                <h5 class="card-title">Check your Prescriptions.</h5>
                                <hr />
                                <button class="btn btn-light btn-lg" data-bs-toggle="modal" data-bs-target="#viewAppointments" onclick="ViewPrescriptionBtnClick()">Check</button>
                                <div class="modal fade" id="viewAppointments" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-xl">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <table class="w-6 whitespace-no-wrap table table-hover" id="table1">
                                                    <thead id="appointmentsTable" class="table-dark">
                                                        <tr class="text-xs font-semibold tracking-wide text-left uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                                            <th class="px-4 py-3">Title</th>
                                                            <th class="px-4 py-3">Medicines</th>
                                                            <th class="px-4 py-3">Usage</th>
                                                            <th class="px-4 py-3">FollowUp Session</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--Payment Card-->

                        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                            <div class="card-header"><h3>Add</h3></div>
                            <div class="card-body">
                                <h4 class="card-title">Add Payment to your account</h4>
                                <hr />

                                <button class="btn btn-light btn-lg" type="button" data-bs-toggle="modal" data-bs-target="#addPayment" data-bs-whatever="@@mdo">Add Now</button>
                                <div class="modal fade" id="addPayment" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">

                                                @* Add Payment to Account *@
                                                <form id="AddPayment" method='POST'>
                                                    <div class="mb-3">
                                                        <input name="CardNumber" id="card" type="text" class="form-control" placeholder="xxxx xxxx xxxx Card Number" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <input name="Amount" id="amount" type="number" class="form-control" placeholder="Amount" />
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button onclick="AddPayment()" type="submit" class="btn btn-primary">Add</button>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                    <!-- Current Appointment Table -->
                    <h3 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">Today's Appointments</h3>
                    <form>
                        <div class="w-full overflow-hidden rounded-lg shadow-xs">
                            <div class="w-full overflow-x-auto">
                                <table class="w-full whitespace-no-wrap">
                                    <thead>
                                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                            <th class="px-4 py-3">Title</th>
                                            <th class="px-4 py-3">Created On</th>
                                            <th class="px-4 py-3">DateTime</th>
                                            <th class="px-4 py-3">Doctor</th>
                                        </tr>
                                    </thead>

                                    @* Todays from Database *@
                                    @if (ViewBag.AllAppointments != null)
                                    {
                                        foreach (var item in ViewBag.AllAppointments)
                                        {
                                            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                                                <tr class="text-gray-700 dark:text-gray-400">
                                                    <td class="px-4 py-3">
                                                        <div class="flex items-center text-sm">
                                                            <div>
                                                                <p class="font-semibold">
                                                                    @item.Title
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @item.CreatedOn
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @item.Appointment_DateTime
                                                    </td>

                                                    <td class="px-4 py-3 text-sm">
                                                        <button formaction=@Url.Action("UserProfile/"+item.DoctorID, "Admin") formmethod="post"
                                                                type="submit" class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors
                                                                  duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600
                                                                  hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                                                            View Profile
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </form>

                    <!-- All Appointments Table -->
                    <h3 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">All Appointments</h3>
                    <form>
                        <div class="w-full overflow-hidden rounded-lg shadow-xs">
                            <div class="w-full overflow-x-auto">
                                <table class="w-full whitespace-no-wrap">
                                    <thead>
                                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                            <th class="px-4 py-3">Title</th>
                                            <th class="px-4 py-3">Created On</th>
                                            <th class="px-4 py-3">DateTime</th>
                                            <th class="px-4 py-3">Doctor</th>
                                        </tr>
                                    </thead>
                                    @if (ViewBag.CurrentAppointments != null)
                                    {
                                        foreach (var item in ViewBag.CurrentAppointments)
                                        {
                                            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                                                <tr class="text-gray-700 dark:text-gray-400">
                                                    <td class="px-4 py-3">
                                                        <div class="flex items-center text-sm">
                                                            <div>
                                                                <p class="font-semibold">
                                                                    @item.Title
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @item.CreatedOn
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @item.Appointment_DateTime
                                                    </td>

                                                    <td class="px-4 py-3 text-sm">
                                                        <button formaction=@Url.Action("UserProfile/"+item.DoctorID, "Admin") formmethod="post"
                                                                type="submit" class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors
                                                                  duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600
                                                                  hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                                                            View Profile
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
</body>
</html>

<script>


    function ViewPrescriptionBtnClick() {
        $("table tbody").empty();
        $.ajax({
            type: "GET",
            url: "/Patient/MyAppointments",
            dataType: "json",
            success: function (data) {
                var rows = "";
                $.each(data, function (i, item) {
                    rows += "<tr><td><div class='flex items-center'><div><p class='font-semibold text-black'>" + item.Title + "</p></div></div></td>" +
                        "<td><div class='flex items-center '><div><p class='font-semibold text-black'>" + item.Medicines + "</p></div></div></td>" +
                        "<td><div class='flex items-center '><div><p class='font-semibold text-black'>" + item.Usage + "</p ></div ></div ></td >"
                        +"<td><div class='flex items-center '><div><p class='font-semibold text-black'>" + item.EndDate + "</p ></div ></div ></td >";
                });
                $("#table1 tbody").append(rows);
            }
        });
    }

    // Dropdown List of doctors
    function DocList() {
        $("#AvailableDoctors").empty();
        $.ajax({
            type: "GET",
            url: "/Patient/DoctorDDL",
            dataType: "json",
            success: function (doctors) {
                var list = "";
                $.each(doctors, function (i, item) {
                    list += "<option value='" + item.UserID + "' class='text-black'>" + item.FirstName + " " + item.LastName + " " + "(" + item.Specialization + ")" + "</option>";
                });
                $("#AvailableDoctors").append(list);
            }
        });
    }


    // Appointment Creating
    function CreateAppointment() {
        docID = $('select[name="DoctorSelect"]').val();
        $("#docID").val(docID);
        $.ajax({
            url: '/Patient/CreateAppointment',
            data: $('#CreateAppointment').serializeArray(),
            type: 'POST',
            success: function (appointment){
                alert("Successfully Created New Appointment");
            }
        });
    }

    $(document).ready(function () {
        DocList();
    });

    // Payment Adding
    function AddPayment() {

        var card = $('#card').val();
        var amount = $('#amount').val();
        debugger
        $.ajax({
            url: '/Patient/Payments',
            data: $("#AddPayment").serializeArray().concat([
                { name: "card", value: card },
                { name: "amount", value: amount }]),
            type: 'POST',
            success: function (payment) {
                alert("Successfully Added Payment");
            }
        });
    }
    
</script>

