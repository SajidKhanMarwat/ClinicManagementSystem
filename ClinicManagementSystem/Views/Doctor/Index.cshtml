@{
    Layout = null;
}

<!DOCTYPE html>
<html :class="{ 'theme-dark': dark }" x-data="data()" lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor Dashboard</title>

    <link rel="stylesheet" href="~/Content/css/tailwind.output.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Content/js/init-alpine.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">


    <!--Used for bootstrap popups-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body>
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900"
         :class="{ 'overflow-hidden': isSideMenuOpen }">
        <!-- Desktop sidebar -->
        <aside class="z-20 hidden w-64 overflow-y-auto dark:bg-gray-800 md:block flex-shrink-0" style="background-color: #E7E9EB">
            <div class="py-4 text-gray-500 dark:text-gray-400">
                <ul class="mt-6">
                    <li class="relative px-6 py-3">
                        <span class="absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg"
                              aria-hidden="true"></span>
                        <a class="inline-flex items-center w-full text-sm font-semibold text-gray-800 transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200 dark:text-gray-100"
                           href="~/Doctor/Index">
                            <svg class="w-5 h-5"
                                 aria-hidden="true"
                                 fill="none"
                                 stroke-linecap="round"
                                 stroke-linejoin="round"
                                 stroke-width="2"
                                 viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            <span class="ml-4">Dashboard</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <div class="flex flex-col flex-1 w-full">
            <header class="z-10 py-4 bg-white shadow-md dark:bg-gray-800">
                <div class="container flex items-center justify-between h-full px-6 mx-auto text-black-600 dark:text-purple-300">
                    <h5><strong>@ViewBag.User.FirstName @ViewBag.User.LastName</strong></h5>
                    <ul class="flex flex-1">
                        <!-- Profile menu -->
                        <li class="relative">
                            &nbsp;
                            <button class="btn btn-outline-primary"
                                    @@click="toggleProfileMenu"
                                    @@keydown.escape="closeProfileMenu"
                                    aria-label="Account"
                                    aria-haspopup="true">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-menu-down" viewBox="0 0 16 16">
                                    <path d="M7.646.146a.5.5 0 0 1 .708 0L10.207 2H14a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h3.793L7.646.146zM1 7v3h14V7H1zm14-1V4a1 1 0 0 0-1-1h-3.793a1 1 0 0 1-.707-.293L8 1.207l-1.5 1.5A1 1 0 0 1 5.793 3H2a1 1 0 0 0-1 1v2h14zm0 5H1v2a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2zM2 4.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5zm0 4a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0 4a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                                </svg>
                            </button>
                            <template x-if="isProfileMenuOpen">
                                <ul x-transition:leave="transition ease-in duration-150"
                                    x-transition:leave-start="opacity-100"
                                    x-transition:leave-end="opacity-0"
                                    @@click.away="closeProfileMenu"
                                    @@keydown.escape="closeProfileMenu"
                                    class="absolute right-0 w-56 p-2 mt-2 space-y-2 text-gray-600 bg-white border border-gray-100 rounded-md shadow-md dark:border-gray-700 dark:text-gray-300 dark:bg-gray-700"
                                    aria-label="submenu">

                                    @Html.Partial("_portalLogOUT")

                                </ul>
                            </template>
                        </li>
                    </ul>
                </div>
            </header>
            <main class="h-full overflow-y-auto">
                <div class="container px-6 mx-auto grid">
                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                        Dashboard
                    </h2>

                    <!-- Total Appointments Count (Pending, Accepted) -->
                    <div class="grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4">
                        <!-- Card -->
                        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                            <div class="card-header"><h3>Appointments</h3></div>
                            <div class="card-body">
                                <h4 class="card-title">
                                    @ViewBag.TotalAppointments
                                </h4>
                            </div>
                        </div>
                    </div>

                    <!-- New Appointments Table-->
                    <h3 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">New Appointments</h3>
                    <form>
                        <div class="w-full overflow-hidden rounded-lg shadow-xs">
                            <div class="w-full overflow-x-auto">
                                <table class="w-full whitespace-no-wrap">
                                    <thead>
                                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                            <th class="px-4 py-3">Patient Name</th>
                                            <th class="px-4 py-3">Title</th>
                                            <th class="px-4 py-3">Description</th>
                                            <th class="px-4 py-3">Patient History</th>
                                            <th class="px-4 py-3">Appointment DateTime</th>
                                            <th class="px-4 py-3">Accept/Decline</th>
                                        </tr>
                                    </thead>

                                    <!-- All Users List from Database -->
                                    @if (ViewBag.NewAppointments != null)
                                    {
                                        foreach (var appointment in ViewBag.NewAppointments)
                                        {
                                            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                                                <tr class="text-gray-700 dark:text-gray-400">
                                                    <td class="px-4 py-3">
                                                        <p class="font-semibold">
                                                            @appointment.FirstName &nbsp; @appointment.LastName
                                                        </p>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        <p class="font-semibold">
                                                            @appointment.Title
                                                        </p>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @appointment.Description
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @appointment.PatientHistory
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @appointment.Appointment_DateTime
                                                    </td>

                                                    <td class="px-4 py-3 text-sm">
                                                        <button onclick="Accepted(@appointment.ApID)" id="accepted" class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors
                                                                         duration-150 bg-blue-600 border border-transparent rounded-lg active:bg-purple-600
                                                                         hover:bg-blue-700 focus:outline-none focus:shadow-outline-purple">
                                                            Accept
                                                        </button>

                                                        <button onclick="Declined(@appointment.ApID)" id="declined" class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors
                                                                         duration-150 bg-red-600 border border-transparent rounded-lg active:bg-purple-600
                                                                         hover:bg-red-700 focus:outline-none focus:shadow-outline-purple">
                                                            Decline
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </form>


                    <!-- Ongoing Appointments Table-->
                    <h3 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">Today's Appointments</h3>
                    @if (ViewBag.TodayAppointments != null)
                    {
                        foreach (var appointment in ViewBag.TodayAppointments)
                        {
                            <form>
                                <div class="w-full overflow-hidden rounded-lg shadow-xs">
                                    <div class="w-full overflow-x-auto">
                                        <table class="w-full whitespace-no-wrap">
                                            <thead>
                                                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                                    <th class="px-4 py-3">Patient Name</th>
                                                    <th class="px-4 py-3">Title</th>
                                                    <th class="px-4 py-3">Description</th>
                                                    <th class="px-4 py-3">Patient History</th>
                                                    <th class="px-4 py-3">Appointment DateTime</th>
                                                </tr>
                                            </thead>

                                            <!-- All Appointments List from Database -->
                                            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                                                <tr class="text-gray-700 dark:text-gray-400">
                                                    <td class="px-4 py-3">
                                                        <p class="font-semibold">
                                                            @appointment.FirstName &nbsp; @appointment.LastName
                                                        </p>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        <p class="font-semibold">
                                                            @appointment.Title
                                                        </p>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @appointment.Description
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @appointment.PatientHistory
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        @appointment.Appointment_DateTime
                                                    </td>

                                                    <td class="px-4 py-3 text-sm">
                                                        <button formaction=@Url.Action("UserProfile/"+appointment.PatientID, "Admin") formmethod="post"
                                                                type="submit" class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors
                                                                      duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600
                                                                      hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                                                            View Profile
                                                        </button>
                                                    </td>
                                                    <!-- Create Prescription -->
                                                    <td class="px-4 py-3 text-sm">
                                                        <div class="card-body">
                                                            <button id="createPrescriptionBtn" class="btn bg-success text-white btn-m" type="button"
                                                                    data-bs-toggle="modal" data-bs-target="#createPrescription" data-bs-whatever="@@mdo">
                                                                Write Prescription
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </form>


                            <!-- Here is the Card Body -->
                            <div class="modal fade" id="createPrescription" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">

                                            @* Prescription Form *@
                                            <form id="CreatePrescription" method='POST'>
                                                <div class="mb-3">
                                                    <div class="form-group" id="inputGroupWrapper">
                                                        <div id="inputFields">
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" name="Medicines" placeholder="Medicine" />&nbsp;<input type="text" class="form-control" name="Usage" placeholder="Usage" />
                                                                <div class="input-group-append">
                                                                    <button class="btn btn-success addInputGroup" type="button"><i>+</i></button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                @*<div class="mb-3">
                                                    <label for="date" class="col-1 col-form-label text-black">StartDate</label>
                                                    <input name="StartDate" id="startDate" class="form-control" type="date" />
                                                </div>*@
                                                <div class="mb-3">
                                                    <label for="date" class="col-1 col-form-label text-black">FollowUp</label>
                                                    <input name="EndDate" id="endDate" class="form-control" type="date" />
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <input type="hidden" name="AppointmentId" id="AppointmentId" value="@appointment.ApID" />
                                                    <button onclick="CreatePrescription()" type="submit" class="btn btn-primary">Create</button>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                </div>
            </main>
        </div>
    </div>
</body>
</html>

<script>

    //Appointment Accepted
    function Accepted(apId) {
        var id = apId;
        $.ajax({
            url: '/Doctor/Accepted/' + id,
            data: { apId: id },
            type: 'POST',
            success: function (result) {
                alert("Appointment Accepted")
            }
        });
    }


    //Appointment Declined
    function Declined(apId) {
        var id = apId;
        $.ajax(
            {
                url: '/Doctor/Declined/' + id,
                data: { apId: id },
                type: 'POST',
                success: function (result) {
                    alert("Appointment Declined")
                }
            });
    }

    //Appointment Completed > when prescription is created
    function Completed(appointmentID) {
        var id = appointmentID;
        debugger
        $.ajax(
            {
                url: '/Doctor/Completed/' + id,
                data: { apId: id },
                type: 'POST',
                success: function (result) {
                    alert("Appointment Completed Successfully")
                }
            });
    }

    //Prescription Create
    function CreatePrescription() {
        var formData = $('#CreatePrescription').serialize(); // User Input Date
        var inputDate = new Date($('#endDate').val()); // Get current Date
        var currentDate = new Date();
        debugger
        if (currentDate <= inputDate) {
            alert("Invalid Date")
        }
        else {
            $.ajax(
                {
                    type: 'POST',
                    url: '/Doctor/Prescription',
                    data: formData,
                    success: function (response) {
                        Completed($("#AppointmentId").val());
                    }
                });
        }
    }

    // Add new input field
    $(document).on('click', '.addInputGroup', function () {
        var inputField = '<div class="input-group mt-2"><input type="text" class="form-control" name="Medicines" placeholder="Enter a value">&nbsp<input type="text" class="form-control" name="Usage" placeholder="Enter a value"> <div class="input-group-append"><button class="btn btn-danger removeInputGroup" type="button"><i>-</i></button></div></div>';
        $('#inputFields').append(inputField);
    });

    // Remove input field
    $(document).on('click', '.removeInputGroup', function () {
        $(this).parent().parent().remove();
    });
</script>